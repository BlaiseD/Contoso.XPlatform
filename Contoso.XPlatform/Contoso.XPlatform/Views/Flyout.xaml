<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contoso.XPlatform.Views.Flyout"
             BackgroundColor="{DynamicResource PageBackgroundColor}"
             IconImageSource="hamburger.png"
             Title="Contoso">
    <StackLayout>
        <CollectionView x:Name="MenuItemsListView"
                        Margin="0,40,0,0"
                        BackgroundColor="{DynamicResource ResultListBackgroundColor}"
                        SelectionMode="Single"
                        ItemsSource="{Binding MenuItems}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="15,10" HorizontalOptions="Fill">
                        <Label VerticalOptions="Fill" 
                    VerticalTextAlignment="Center" 
                    Text="{Binding Title}" 
                    FontSize="24"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
